~$ pip install nodeenv
~$ nodeenv ~/virtualenvs/ng2 --prebuilt
~$ . ~/virtualenvs/ng2/bin/activate
(env)~$ npm install -g @angular/cli@1.0.0-rc.4
(env)~$ ng new ng2 && cd ng2
(env)~$ npm install ng2-bootstrap@1.4 bootstrap --save
(env)~$ ng serve
(env)~$ ng lint && ng build --prod

