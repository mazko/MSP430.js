+  public void dataReceived(USARTSource source, int spiIn) {
+    Assert.ok( (spiIn & 0xff) == spiIn, " byte spiIn ? " + spiIn);
+    int spiOut = inputByte(spiIn);
+    Assert.ok( (spiOut & 0xff) == spiOut, " byte spiOut ? " + spiOut);
